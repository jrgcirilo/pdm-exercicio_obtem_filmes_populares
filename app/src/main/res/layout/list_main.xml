<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/posterPathImageView"
        android:layout_width="@dimen/widthImageView"
        android:layout_height="wrap_content"
        android:contentDescription="@string/descPosterMovie"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_button_movie" />

    <LinearLayout
        android:columnCount="1"
        android:rowCount="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:useDefaultMargins="true">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center"
            android:contentDescription="@string/descTitleMovie"
            android:text="TÃ­tulo"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resumeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:contentDescription="@string/descResumeMovie"
            android:text="Resumo" />
    </LinearLayout>
</LinearLayout>